@model EInventory.Models.CompanyModels

@{
    ViewBag.Title = "Add Companny";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Add New Company</h3>
                </div><!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("Add", "Company", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CompID)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Addr, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(model => model.Addr, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">

                            @Html.LabelFor(model => model.City, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>

                            @Html.LabelFor(model => model.State, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.State, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                            </div>


                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Pincode, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Pincode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Pincode, "", new { @class = "text-danger" })
                            </div>


                            @Html.LabelFor(model => model.Country, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Country, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Contact1, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Contact1, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Contact1, "", new { @class = "text-danger" })
                            </div>

                            @Html.LabelFor(model => model.Contact2, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.Contact2, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Contact2, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EmailID, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                            </div>


                            @Html.LabelFor(model => model.WebURL, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-4">
                                @Html.TextBoxFor(model => model.WebURL, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.WebURL, "", new { @class = "text-danger" })
                            </div>

                        </div>


                        <div class="form-group ">
                            <div class="">
                                <div class="col-lg-offset-0 col-md-12" id="replacetarget1">
                                    @{ Html.RenderAction("ContactList", "Company", new { conactList = Model.listCompAuthorityPersons }); }
                                </div>

                                <div class="col-lg-offset-0 col-md-12" id="replacetarget2">
                                    @{ Html.RenderAction("SatutoryList", "Company", new { satutoryList = Model.listCompSatutory }); }
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <a href="@Url.Action("Index")" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-info pull-right">Save</button>
                    </div><!-- /.box-footer -->
                }

            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</section>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>
